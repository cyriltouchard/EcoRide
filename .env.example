# Copy this file to .env and fill in the real secrets. Do NOT commit the .env file.

# App
NODE_ENV=production
PORT=3000
JWT_SECRET=replace_with_a_strong_jwt_secret

# MongoDB
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=replace_with_mongo_root_password
MONGO_INITDB_DATABASE=ecoride
MONGO_DATABASE=ecoride

# MySQL
MYSQL_ROOT_PASSWORD=replace_with_mysql_root_password
MYSQL_DATABASE=ecoride
MYSQL_USER=ecoride_user
MYSQL_PASSWORD=replace_with_mysql_user_password

# phpMyAdmin / mongo-express basic auth
ME_CONFIG_MONGODB_ADMINUSERNAME=admin
ME_CONFIG_MONGODB_ADMINPASSWORD=replace_with_mongo_admin_password
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=replace_with_basic_auth_password
